                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/词典内容没加载完" android:indeterminate="true" android:layout_margin="24dp"/>
        <TextView
                android:text="哼"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/词典内容显示框"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_margin="24dp"/>
    </LinearLayout>
</ScrollView>