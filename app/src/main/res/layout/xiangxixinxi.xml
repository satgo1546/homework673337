<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/详细标题"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/一键三连按钮"
                app:srcCompat="@drawable/ic_dianzan"/>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_toubi" android:id="@+id/投币图标"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"/>
        </FrameLayout>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ProgressBar
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_shoucang" android:id="@+id/收藏图标"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"/>
        </FrameLayout>
    </LinearLayout>
    <TextView
            android:text="详细信息！"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/详细内容"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            android:textSize="20sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="矩阵变换"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/缩放类型按钮零" android:layout_weight="1"
                />
        <Button
                android:text="适应纵横"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/缩放类型按钮一" android:layout_weight="1"
                />
        <Button
                android:text="适应开头"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/缩放类型按钮二" android:layout_weight="1"
                />
        <Button
                android:text="适应中间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/缩放类型按钮三" android:layout_weight="1"
                />
        <Button
                android:text="适应结尾"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/缩放类型按钮四" android:layout_weight="1"
                />
        <Button
                android:text="居于中央"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/缩放类型按钮五" android:layout_weight="1"
                />
        <Button
                android:text="居中裁剪"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/缩放类型按钮六" android:layout_weight="1"
                />
        <Button
                android:text="居中于内"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/缩放类型按钮七" android:layout_weight="1"
                />
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/图像视图" app:srcCompat="@drawable/wangyoumenzhenshishenmeniaotudouyou"
            android:background="@color/purple_200"/>
</LinearLayout>
