<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/详细标题"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/一键三连按钮"
                android:src="@drawable/ic_dianzan"/>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_toubi" android:id="@+id/投币图标"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"/>
        </FrameLayout>
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <ProgressBar
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_shoucang" android:id="@+id/收藏图标"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"/>
        </FrameLayout>
    </LinearLayout>
    <TextView
            android:text="详细信息！"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/详细内容"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            android:textSize="20sp"/>
</LinearLayout>